@using SixMan.ChiMa.Web.Models.Common.Modals
@model SixMan.ChiMa.Web.Models.Food.EditFoodMaterialModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditFoodMaterial")))

<div class="modal-body">
    <form name="foodMaterialEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Current.Id" />       
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-user-details">               
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="Description" type="text" name="Description" value="@Model.Current.Description" required maxlength="32" class="validate form-control">
                                <label for="name" class="form-label">@L("Description")</label>
                            </div>
                        </div>
                    </div>
                   
                </div>                
            </div>            

    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/FoodMaterial/_EditFoodMaterialModal.js" asp-append-version="true"></script>
